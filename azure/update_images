#!/usr/bin/env bash

# move into azure directory
AZURE_DIR='/Users/tjc/research/pangeo/azure'
cd $AZURE_DIR

# check git status
git diff --exit-code > /dev/null

if [ $? -eq 0 ]; then
  set -e

  # get commit hash for tag
  TAG=`git rev-parse --short HEAD`

  # build worker
  cd "$AZURE_DIR/worker"
  NAME='tjcrone/pangeo-worker'
  docker build -t "$NAME:$TAG" .

  # push worker
  docker push "$NAME:$TAG"

  # update worker-template tag
  cd "$AZURE_DIR/notebook"
  sed -i '' "s/    image.*/    image: tjcrone\/pangeo-worker:${TAG}/" worker-template.yaml

  # build notebook
  NAME='tjcrone/pangeo-notebook'
  docker build -t "$NAME:$TAG" .

  # push notebook
  docker push "$NAME:$TAG"

  # update jupyter-config
  cd $AZURE_DIR
  sed -i '' "s/    tag.*/    tag: ${TAG}/" jupyter-config_azure.yaml

else
    printf "\nPlease commit your changes first.\n\n"
fi
